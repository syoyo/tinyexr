# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release_native
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release_native)
  exrview_config = release_native
endif
ifeq ($(config),release_x64)
  exrview_config = release_x64
endif
ifeq ($(config),release_x32)
  exrview_config = release_x32
endif
ifeq ($(config),debug_native)
  exrview_config = debug_native
endif
ifeq ($(config),debug_x64)
  exrview_config = debug_x64
endif
ifeq ($(config),debug_x32)
  exrview_config = debug_x32
endif

PROJECTS := exrview

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

exrview:
ifneq (,$(exrview_config))
	@echo "==== Building exrview ($(exrview_config)) ===="
	@${MAKE} --no-print-directory -C . -f exrview.make config=$(exrview_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f exrview.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release_native"
	@echo "  release_x64"
	@echo "  release_x32"
	@echo "  debug_native"
	@echo "  debug_x64"
	@echo "  debug_x32"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   exrview"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"